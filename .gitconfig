        cm = commit -m
        cam = commit -am
        ba = branch -a
        co = checkout
        cob = checkout -b
        uu = reset
        gp = "!git push -u origin $(git branch-name)"
        gl = "!git pull origin $(git branch-name)"
        branch-name = "!git rev-parse --abbrev-ref HEAD"
        ours = "!f() { git checkout --ours $@ && git add $@; }; f"
        theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
